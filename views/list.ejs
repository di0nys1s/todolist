
    <%- include("header") -%>

        <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">
    <% newListItems.forEach(function(item) { %>
        <form action="delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                <p> <%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>    
    <% }) %>
        <form class="item" action="/" method="post">
            <input type="text" minlength="3" maxlength="50" name="newItem" placeholder="New Item" autocomplete="off" required>
            <button type="submit" name="list" value="<%= listTitle %>">+</button></button> </form>
    </div>

    <%- include("footer") -%>
